{
  "compilerOptions": {
    /* ðŸ”¹ Utilisation du JSX avec React 17+ (nÃ©cessaire pour .tsx) */
    "jsx": "react-jsx",

    /* ðŸ”¹ Support des modules modernes */
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    // Autres options de compilation ici
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  }
}
